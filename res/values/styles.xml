<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShoutStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/StreetShoutActionBar</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="StreetShoutActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/shoutBlue</item>
        <item name="android:titleTextStyle">@style/ActionBarText</item>
        <item name="android:icon">@drawable/shout_image_place_holder</item>
    </style>

    <style name="ShoutStyle.NoBar" parent="ShoutStyle">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActionBarText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="PreferenceButton">
        <item name="android:background">@drawable/selector_top_grey_border</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PreferenceTitle">
        <item name="android:background">@drawable/selector_top_grey_border</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CreateShoutEditText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>