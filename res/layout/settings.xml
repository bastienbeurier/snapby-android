<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:paddingTop="10dp">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:padding="1dp" >

            <TextView android:layout_height="match_parent"
                      android:layout_width="wrap_content"
                      android:textColor="@color/blackLighter"
                      android:textSize="14sp"
                      android:fontFamily="sans-serif"
                      android:textStyle="bold"
                      android:gravity="left|center_vertical"
                      android:text="@string/edit_profile"
                      android:layout_marginBottom="5dp"/>

            <View android:layout_height="1dp"
                  android:layout_width="match_parent"
                  android:focusableInTouchMode="true"
                  android:background="@color/veryLightGrey" />

            <FrameLayout  android:id="@+id/settings_edit_profile_picture_container"
                           android:layout_height="60dp"
                           android:layout_width="match_parent"
                           style="@style/PreferenceButton">

                <TextView android:layout_height="match_parent"
                          android:layout_width="wrap_content"
                          android:textColor="@color/blackLighter"
                          android:textSize="16sp"
                          android:gravity="center"
                          android:layout_gravity="left"
                          android:text="@string/profile_picture_preference_button"/>

                <ImageView android:id="@+id/settings_profile_picture"
                           android:layout_height="match_parent"
                           android:layout_width="wrap_content"
                           android:layout_gravity="right"
                           android:layout_margin="5dp"/>

            </FrameLayout>

            <LinearLayout android:layout_height="60dp"
                          android:layout_width="match_parent"
                          style="@style/PreferenceButton"
                          android:orientation="horizontal">

                <TextView android:layout_height="match_parent"
                          android:layout_width="wrap_content"
                          android:textColor="@color/blackLighter"
                          android:textSize="16sp"
                          android:gravity="left|center_vertical"
                          android:text="@string/username_preference_button"/>

                <EditText android:id="@+id/settings_username_editText"
                          android:layout_height="match_parent"
                          android:layout_width="match_parent"
                          android:layout_marginLeft="10dp"
                          android:textColor="@color/snapbyPink"
                          android:textSize="16sp"
                          android:fontFamily="sans-serif"
                          android:textStyle="bold"
                          android:gravity="left|center_vertical"
                          android:background="#00000000"
                          android:singleLine="true"
                          android:imeOptions="actionSend"
                          android:text="@string/username_preference_button"/>
            </LinearLayout>

            <TextView android:layout_height="match_parent"
                      android:layout_width="wrap_content"
                      android:textColor="@color/blackLighter"
                      android:textSize="14sp"
                      android:fontFamily="sans-serif"
                      android:textStyle="bold"
                      android:gravity="left|center_vertical"
                      android:text="@string/snapby_settings"
                      android:layout_marginBottom="5dp"
                      android:layout_marginTop="10dp"/>

            <View android:layout_height="1dp"
                  android:layout_width="match_parent"
                  android:background="@color/veryLightGrey" />

            <LinearLayout android:layout_height="60dp"
                          android:layout_width="match_parent"
                          style="@style/PreferenceButton"
                          android:orientation="horizontal">

                <TextView android:layout_height="match_parent"
                          android:layout_width="match_parent"
                          android:layout_weight="1"
                          android:textColor="@color/blackLighter"
                          android:textSize="16sp"
                          android:gravity="left|center_vertical"
                          android:text="@string/distance_unit_preference_button"/>

                <Spinner android:id="@+id/distance_preference_spinner"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="14sp"
                         android:layout_gravity="center_vertical"
                         android:layout_marginRight="10dp"/>

            </LinearLayout>

            <TextView android:layout_height="match_parent"
                      android:layout_width="wrap_content"
                      android:textColor="@color/blackLighter"
                      android:textSize="14sp"
                      android:fontFamily="sans-serif"
                      android:textStyle="bold"
                      android:gravity="left|center_vertical"
                      android:text="@string/participate"
                      android:layout_marginBottom="5dp"
                      android:layout_marginTop="10dp"/>

            <View android:layout_height="1dp"
                  android:layout_width="match_parent"
                  android:background="@color/veryLightGrey" />

            <Button
                    android:id="@+id/feedback_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColor="@color/blackLighter"
                    style="@style/PreferenceButton"
                    android:text="@string/feedback_preference_button"/>

            <Button
                    android:id="@+id/rate_me_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColor="@color/blackLighter"
                    style="@style/PreferenceButton"
                    android:text="@string/rate_me_preference_button"/>



            <Button android:id="@+id/logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColor="@color/snapbyLightRed"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    style="@style/PreferenceButton"
                    android:text="@string/logout"
                    android:gravity="center"/>

            <TextView android:id="@+id/app_name_and_version"
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:textColor="@color/lightGrey"
                      android:textSize="14sp"
                      android:gravity="center"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>