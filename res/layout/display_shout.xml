<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/lightSnapbyPink">

        <ImageView android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/shout_image_place_holder"
                   android:layout_gravity="center"/>

        <ImageView
                android:id="@+id/display_shout_image_view"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
    </FrameLayout>

    <ImageView android:id="@+id/display_dismiss_button"
               android:layout_width="65dp"
               android:layout_height="65dp"
               android:padding="10dp"
               android:src="@drawable/create_cancel_button_selector"
               android:layout_gravity="top|left"/>

    <ImageView android:id="@+id/display_more_button"
               android:layout_width="65dp"
               android:layout_height="65dp"
               android:padding="10dp"
               android:src="@drawable/display_more_button_selector"
               android:layout_gravity="top|right"/>

    <TextView android:id="@+id/display_description_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textSize="22dp"
              android:textColor="@color/white"
              android:background="@color/semiTransparentBlackDarker"
              android:layout_gravity="bottom"
              android:layout_marginBottom="100dp" />
</FrameLayout>