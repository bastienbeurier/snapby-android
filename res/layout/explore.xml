<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/map"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              class="com.google.android.gms.maps.MapFragment" />

    <ImageView android:id="@+id/explore_refresh_button"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:padding="10dp"
               android:src="@drawable/explore_refresh_button_selector"
               android:layout_gravity="top|left"/>


    <com.streetshout.android.custom.ShoutViewPagerContainer android:id="@+id/explore_shout_view_pager_container"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="220dp"
                                                            android:layout_gravity="bottom"
                                                            android:layout_marginBottom="10dp"
                                                            android:gravity="center">

        <android.support.v4.view.ViewPager
                android:id="@+id/explore_view_pager"
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>

    </com.streetshout.android.custom.ShoutViewPagerContainer>

    <TextView android:id="@+id/explore_shout_no_connection"
              android:text="@string/no_connection_feed"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="3dp"
              android:paddingBottom="3dp"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:background="@drawable/rounded_background"
              android:textSize="25dp"
              android:textColor="@color/white"
              android:gravity="center"
              android:layout_gravity="center"
              android:visibility="gone"/>

    <TextView android:id="@+id/explore_shout_no_shout"
              android:text="@string/empty_feed"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="3dp"
              android:paddingBottom="3dp"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:background="@drawable/rounded_background"
              android:textSize="25dp"
              android:textColor="@color/white"
              android:gravity="center"
              android:layout_gravity="center"
              android:visibility="gone"/>

</FrameLayout>